{% extends 'base.html.twig' %}
{% block title %}Your Mail Box{% endblock %}
{% block javascripts %}<script src="{{ asset('js/grouplist.js') }}"></script>{% endblock %}
{% block body %}

    <header class="head">
        <div class="container">
            <h1 class="title">Inbox</h1>
            <div class="row">


            <div class="col-md-2 list-group account-menu">
                <a class="list-group-item list-group-item-action active" href="#" data-target-id="inbox"><i class="fas fa-inbox"></i> Inbox</a></li>
                <a class="list-group-item list-group-item-action" href="#" data-target-id="new_message"><i class="fas fa-share-square"></i> New Message</a></li>
                <a class="list-group-item list-group-item-action" href="#" data-target-id="sent"><i class="fas fa-envelope"></i> Sent Messages</a></li>
                <a class="list-group-item list-group-item-action" href="#" data-target-id="drafts"><i class="fas fa-envelope-open"></i> Drafts</a></li>
                <a class="list-group-item list-group-item-action" href="{{ path("profile") }}"><i class="fas fa-user-circle"></i> Profile</a></li>
            </div>

            <div class="col-md-10 well account-content" id="inbox">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Your Inbox</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                {% for mr in messages_in %}
                                    <h6>{{ mr.message.title }}</h6>
                                    <span>Sender: {{ mr.message.sender_inbox.user.firstName }} {{ mr.message.sender_inbox.user.lastName }}</span>
                                    <p>{{ mr.message.message_file }}</p>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 well account-content" id="new_message">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>New Message</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_start(createForm) }}
                                {{ form_row(createForm.user) }}
                                {{ form_row(createForm.title) }}
                                {{ form_row(createForm.message) }}
                                    <br/>
                                    <button class="btn btn-secondary" type="submit">Send Message</button>
                                {{ form_end(createForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 well account-content" id="sent">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Sent Messages</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <span>Sent Messages to be displayed here</span>
                                <!-- sent messages  to be here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-10 well account-content" id="drafts">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <h4>Drafts</h4>
                                <hr>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                <span>Drafts to be there</span>
                                <!-- drafts to be here -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
    </div>
{% endblock %}
{% form_theme createForm 'form/fields.html.twig' %}