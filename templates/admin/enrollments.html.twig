{%extends 'base.html.twig'%}
{%block title%}Your Mail Box{%endblock%}
{%block stylesheets%}
	<link rel="stylesheet" href="{{asset('css/messages-style.css')}}">
{%endblock%}
{%block body%}
	
	<header class="head">
		<div class="container">
			<h1 class="title">Admin Panel</h1>
			<div class="row">
				
				<div class="col-md-2 list-group account-menu">
					<a class="list-group-item list-group-item-action" href="{{path('admin_block')}}"><i class="fas fa-clone"></i> Content</a>
					<a class="list-group-item list-group-item-action" href="{{path('admin_group')}}"><i class="fas fa-child"></i> Groups</a>
					<a class="list-group-item list-group-item-action active" href="{{path('admin_enrollments')}}"><i class="fa fa-book"></i> Enrollments</a>
					<a class="list-group-item list-group-item-action" href="{{path('admin_user')}}"><i class="fas fa-user-friends"></i> Users</a>
				</div>
				
				<div class="col-md-10 well account-content">
					<div class="card card-shadow">
						<div class="card-body">
							<div class="row">
								<div class="col-md-12">
									<h4>Enrollments</h4>
									<hr>
								</div>
							</div>
							<div class="row">
								<div class="col-md-12">
									<table class="table table-bordered">
										<thead>
										<tr>
											<th>Email</th>
											<th>Group</th>
											<th>Enrollment Code</th>
											<th>Creation Date</th>
											<th>Expired</th>
										</tr>
										</thead>
										
										{%for enrl in enrollments%}
											<tr>
												<td>{{enrl.email}}</td>
												<td>{{enrl.group.name}}</td>
												<td class="ellipsis">
													<i class="copy_code fas fa-minus-square"></i>
													<a id="enrl{{enrl.id}}" class="enrl_code" href="{{path('parent_register', {'enrollment_hash': enrl.enrollmenthash})}}">localhost:8000{{path('parent_register', {'enrollment_hash': enrl.enrollmenthash})}}</a>
												</td>
												<td>{{enrl.creationdate|date("Y-m-d H:i:s")}}</td>
												<td>
													{%if enrl.expired%}
														Yes
													{%else%}
														No
													{%endif%}
												</td>
											</tr>
										{%endfor%}
									
									</table>
									<hr>
									<h5>Create Enrollments</h5>
									{{form_start(form)}}
									{{form_row(form.group)}}
									{{form_row(form.email)}}
									<button class="btn btn-secondary" type="submit">Create</button>
									{{form_end(form)}}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
{% block javascripts %}
	<script src="{{ asset('js/copyToClipboard.js') }}"></script>
{% endblock %}
{%endblock%}
{% form_theme form 'form/fields.html.twig' %}