{% block form_row %}
    {% spaceless %}
        <div class="form-group row">
            {% if not form.vars.valid %}
                <label class="col-4 col-form-label">
                    <div class="alert alert-danger">
                        {{ form_label(form) }}
                        {{ form_errors(form) }}
                    </div>
                </label>
            {% else %}
                <label class="col-4 col-form-label">{{ form_label(form) }}</label>
            {% endif %}
            {% if form.vars.block_prefixes.1 == "file" %}
                <div class="col-8">
                    <label for="form_attachments" class="custom-file-upload">
                        <img class="upload_icon" src="/img/file_upload_icon.png"> Upload Files
                    </label>
                    {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
                </div>
            {% else %}
                <div class="col-8">
                    {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
                </div>
            {% endif %}
            {{ form_help(form) }}
        </div>
    {% endspaceless %}
{% endblock form_row %}